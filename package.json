{
  "name": "monjo.pro",
  "version": "1.0.0",
  "repository": "https://github.com/lysid/monjo.pro.git",
  "author": "Frédéric Monjo <frederic@monjo.pro>",
  "type": "module",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@picocss/pico": "~1.5.0",
    "js-yaml": "^4.1.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-header-sections": "^1.0.0",
    "markdown-it-image-figures": "^2.1.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sass": "^1.86.3"
  },
  "prettier": {
    "semi": false,
    "proseWrap": "always"
  },
  "scripts": {
    "build": "run-s -nl \"build:*\"",
    "build:scss": "sass scss/styles.scss:content/css/styles.css --no-source-map --load-path=node_modules/@picocss/pico/scss",
    "build:eleventy": "eleventy",
    "clean": "rimraf dist/",
    "dev": "run-p -nl \"dev:*\"",
    "dev:styles": "sass scss/styles.scss:content/css/styles.css --no-source-map --load-path=node_modules/@picocss/pico/scss --watch",
    "dev:eleventy": "eleventy --serve",
    "format": "prettier ."
  },
  "packageManager": "yarn@4.7.0"
}
